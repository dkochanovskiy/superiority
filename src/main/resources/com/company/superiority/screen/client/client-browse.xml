<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://clientBrowse.caption"
        focusComponent="clientsTable">
    <data readOnly="true">
        <collection id="clientsDc"
                    class="com.company.superiority.entity.Client">
            <fetchPlan extends="_base"/>
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from Client e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
        <timer id="timer"
               autostart="true"
               delay="30000"
               repeating="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="clientsTable" spacing="true">
        <filter id="filter"
                dataLoader="clientsDl">
            <properties include=".*"/>
        </filter>
        <label id="rowCountLabel"/>
        <dataGrid id="clientsTable"
                  width="100%"
                  dataContainer="clientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="excelExport" type="excelExport"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column property="clientcode" id="clientcode"/>
                <column property="name" id="name"/>
                <column property="address" id="address"/>
                <column property="contactperson" id="contactperson"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="clientsTable.create"/>
                <button id="editBtn" action="clientsTable.edit"/>
                <button id="removeBtn" action="clientsTable.remove"/>
                <button id="clientBtn" action="clientsTable.excelExport"/>
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
